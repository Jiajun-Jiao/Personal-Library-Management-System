<h2>{{bookList.name}}</h2>
<a href="/booklist/{{bookList.name}}/edit"><button>Edit</button></a>
<br>
<br>
<div class = "booklist">
    <b>Created BY:</b> <u>{{bookList.user.username}}</u><br>
    <br>
    <b>Created AT:</b> {{bookList.createdAt}}<br>
    <br>
    <b>Booklist Description:</b> <br>
    <div class = "listdesc">
        {{bookList.description}}<br>
    </div>
    <br>
    <b>BOOKS:</b> 
    <a href="/booklist/{{bookList.name}}/addbook"><button>Add Book</button></a>
    <ol>
    {{#each bookList.books as |b|}}
    {{b.title}}&nbsp;-&nbsp;<a href= "/booklist/{{b.list}}/{{b.title}}/detail"><button>detail</button></a>
    <br>
    {{/each}}
    </ol>
    <br>
    <a class = "return-button" href="/"><button>Return Home</button></a>
</div>
